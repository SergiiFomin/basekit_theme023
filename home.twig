                        </article>
                        <article class="span4">
                            {{widget('content', 'titel4', {content: '<h2>Latest photos</h2>', lines: 'all'})|raw}}
                            {{widget('gallery', 'photo', 
                                {'showDescription': false,
                                'showTitle': false,
                                'images':
                                [
                                {'imageHeight':'531', 'imageWidth':'640', 'url':asset('/images/photo/img1.jpg'), 'title':'Lorem ipsum dolor sit...', 'description': 'Feb 02, 2014'},
                                {'imageHeight':'531', 'imageWidth':'640', 'url':asset('/images/photo/img2.jpg'), 'title':'Excepteur sint...', 'description': 'Feb 02, 2014'},
